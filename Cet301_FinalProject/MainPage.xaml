<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cet301_FinalProject.MainPage"
             BackgroundColor="#1F1F1F">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20">
        <VerticalStackLayout Grid.Row="0" Spacing="5" Margin="0,20,0,0">
            <Label Text="CetKimya Store Management"
                   TextColor="WhiteSmoke"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center">
            </Label>
            <Label x:Name="LBLUserStatus"
                   Text="User Status: Standard"
                   TextColor="Gold"
                   FontSize="16"
                   HorizontalOptions="Center">
            </Label>
        </VerticalStackLayout>
        
        <VerticalStackLayout Grid.Row="1" Spacing="20" Padding="30" 
                             VerticalOptions="Center">
            <Button Text="Customers"
                    Padding="20"
                    BackgroundColor="#333333"
                    TextColor="#FFD700"
                    FontSize="18"
                    FontAttributes="Bold"
                    Clicked="ToCustomers"
                    >
                </Button>
            <Button Text="Products"
                    Padding="20"
                    BackgroundColor="#333333"
                    TextColor="MediumPurple"
                    FontAttributes="Bold"
                    FontSize="18"
                    Clicked="ToProducts">
                </Button>
            <Button Text="Orders"
                    Padding="20"
                    BackgroundColor="#333333"
                    TextColor="#00FF7F"
                    FontAttributes="Bold"
                    FontSize="18"
                    Clicked="ToOrders">
                </Button>
        </VerticalStackLayout>
        
        <VerticalStackLayout Grid.Row="2" Spacing="20" Padding="20">
            <VerticalStackLayout x:Name="LoginPanel" Spacing="20">
                <Label Text="Admin? Log In"
                       TextColor="WhiteSmoke"
                       FontSize="16">
                    </Label>
                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                    <Entry x:Name="EntryPassword"
                           Placeholder="Enter Admin Password"
                           PlaceholderColor="WhiteSmoke"
                           TextColor="WhiteSmoke"
                           BackgroundColor="#2D2D2D"
                           IsPassword="True"
                           Grid.Column="0"></Entry>
                    <Button Text="Log In"
                            BackgroundColor="#00FF7F"
                            TextColor="Black"
                            FontAttributes="Bold"
                            Clicked="LoginClicked"
                            Grid.Column="1"></Button>
                </Grid>
            </VerticalStackLayout>
            <Grid x:Name="AdminPanel"
                  ColumnDefinitions="*,*"
                  ColumnSpacing="10"
                  IsVisible="False">
                <Button Text="View Logs"
                        BackgroundColor="#2D2D2D"
                        TextColor="#00BFFF"
                        BorderWidth="1"
                        BorderColor="#00BFFF"
                        Clicked="ToLogs"
                        Grid.Column="0">
                    </Button>
                <Button Text="Log Out"
                        BackgroundColor="#2D2D2D"
                        TextColor="#D9534F"
                        BorderWidth="1"
                        BorderColor="#D9534F"
                        Clicked="LogoutClicked"
                        Grid.Column="1"
                    ></Button>
            </Grid>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
