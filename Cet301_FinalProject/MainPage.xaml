<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cet301_FinalProject.MainPage"
             BackgroundColor="#1F1F1F">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20">
        <VerticalStackLayout Grid.Row="0" Spacing="5" Margin="0,20,0,0">
            <Label Text="CetKimya Store Management"
                   TextColor="WhiteSmoke"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center">
            </Label>
            <Label x:Name="LBLUserStatus"
                   Text="User Status: Standard"
                   TextColor="#FFD700"
                   FontSize="16"
                   HorizontalOptions="Center">
            </Label>
        </VerticalStackLayout>
        
        <VerticalStackLayout Grid.Row="1" Spacing="20" Padding="30">
            <Button Text="Customers"
                    Padding="20"
                    BackgroundColor="#333333"
                    TextColor="#FFD700"
                    FontSize="18"
                    FontAttributes="Bold"
                    >
                </Button>
            <Button Text="Products"
                    Padding="20"
                    BackgroundColor="#333333"
                    TextColor="MediumPurple"
                    FontAttributes="Bold"
                    FontSize="18">
                </Button>
            <Button Text="Orders"
                    Padding="20"
                    BackgroundColor="#333333"
                    TextColor="#00FF7F"
                    FontAttributes="Bold"
                    FontSize="18">
                </Button>
        </VerticalStackLayout>
        
        <VerticalStackLayout Grid.Row="2">
            
        </VerticalStackLayout>
    </Grid>

</ContentPage>
