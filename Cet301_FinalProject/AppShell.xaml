<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cet301_FinalProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Cet301_FinalProject"
    xmlns:views="clr-namespace:Cet301_FinalProject.Views"
    Title="Cet301_FinalProject">
    
    <TabBar>
        <ShellContent
            Title="Main Page"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            ></ShellContent>
        <ShellContent
            Title="Customers"
            ContentTemplate="{DataTemplate views:CustomersPage}"
            Route="CustomersPage"
            ></ShellContent>
        <ShellContent
            Title="Products"
            ContentTemplate="{DataTemplate views:ProductsPage}"
            Route="ProductsPage"
            ></ShellContent>
        <ShellContent
            Title="Orders"
            ContentTemplate="{DataTemplate views:OrdersPage}"
            Route="OrdersPage"
            ></ShellContent>
    </TabBar>
    
</Shell>
